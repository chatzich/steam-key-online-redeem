<div id="modalExport" class="modal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" data-i18n="export">Export</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">Ã—</span>
				</button>
			</div>
			<div class="modal-body">
				<fieldset class="form-group">
					<legend data-i18n="export_file_name">Export File Name</legend>
					<input type="text" class="form-control" id="txtFileName" />
				</fieldset>
				<fieldset class="form-group">
					<legend data-i18n="export_settings">Export Settings</legend>
					<div class="form-check mb-3">
						<label class="form-check-label">
							<input id="cbASF" type="checkbox" class="form-check-input">
							<span data-i18n="export_asf"> ASF Format </span>
						</label>
					</div>
					<div class="form-check">
						<label class="form-check-label">
							<input id="cbRedeemed" type="checkbox" class="form-check-input">
							<span data-i18n="export_redeemed"> Redeemed </span>
							(<b id="txtRedeemedCount">0</b>)
						</label>
					</div>
					<div class="form-check">
						<label class="form-check-label">
							<input id="cbFailed" type="checkbox" class="form-check-input">
							<span data-i18n="export_failed"> Failed </span>
							(<b id="txtFailedCount">0</b>)
						</label>
					</div>
					<div class="form-check">
						<label class="form-check-label">
							<input id="cbWaiting" type="checkbox" class="form-check-input">
							<span data-i18n="export_waiting"> Waiting for redeeming </span>
							(<b id="txtWaitingCount">0</b>)
						</label>
					</div>
				</fieldset>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-i18n="cancel"
					data-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-primary" data-i18n="export"
					id="btnExport">Export</button>
			</div>
		</div>
	</div>
</div>